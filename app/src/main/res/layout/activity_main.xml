<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade_3"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black_shade_3"
        android:id="@+id/idTVSecondary"
        android:maxLines="1"
        android:textAlignment="textEnd"
        android:gravity="bottom"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text=""
        tools:ignore="RtlCompat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/black_shade_3"
        android:id="@+id/idTVprimary"
        android:maxLines="1"
        android:textAlignment="textEnd"
        android:gravity="bottom"
        android:padding="10dp"
        android:layout_below="@id/idTVSecondary"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:text=""
        tools:ignore="RtlCompat" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blac_shade_1"
        android:layout_below="@id/idTVprimary"
        app:cardBackgroundColor="@color/blac_shade_1"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/blac_shade_1"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">
                


                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:text="AC"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:id="@+id/bac"
                        android:padding="6dp"
                        android:textColor="@color/yellow"
                        android:textSize="15sp"
                        tools:targetApi="LOLLIPOP"  />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:text="C"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:id="@+id/bc"
                        android:padding="6dp"
                        android:textColor="@color/yellow"
                        android:textSize="15sp"
                        tools:targetApi="LOLLIPOP"  />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:text="("
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:id="@+id/bbrac1"
                        android:padding="6dp"
                        android:textColor="@color/yellow"
                        android:textSize="15sp"
                        tools:targetApi="LOLLIPOP"  />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:text=")"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:id="@+id/bbrac2"
                        android:padding="6dp"
                        android:textColor="@color/yellow"
                        android:textSize="15sp"
                        tools:targetApi="LOLLIPOP"  />












            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">


                <Button
                    android:id="@+id/bsin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="sin"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/bcos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="cos"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/btan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="tan"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/blog"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="log"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/bln"
                    android:textAllCaps="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="ln"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">


                <Button
                    android:id="@+id/bfact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="x!"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/bsquare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text=" x^2 "
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/bsquareroot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="√"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/binverse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="1/x"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/bdivide"
                    android:textAllCaps="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="/"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">


                <Button
                    android:id="@+id/b1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/b2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/b3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/bmultiply"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="*"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">


                <Button
                    android:id="@+id/b4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/b5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/b6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/bsubtract"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="-"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">


                <Button
                    android:id="@+id/b7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/b8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/b9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/badd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="+"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">


                <Button
                    android:id="@+id/bpi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="π"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/b0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/bdot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/bequal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="="
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    tools:targetApi="LOLLIPOP"
                    android:textAllCaps="false"/>



            </LinearLayout>





        </LinearLayout>

    </androidx.cardview.widget.CardView>







</RelativeLayout>